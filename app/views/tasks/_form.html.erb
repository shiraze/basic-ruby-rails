    
<h2><%= button_text %></h2>

    <%= form_for(form) do |f| %>
    <table summary="Task form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Completed</th>
        <td><%= f.check_box(:completed) %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_area(:description) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit(button_text) %>
    </div>
    <% end %>